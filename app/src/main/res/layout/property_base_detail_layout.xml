<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_add_property">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <!-- Entire layout under the top-bar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/top_bar_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/text_box_margin_start_end"
                        android:layout_marginBottom="@dimen/text_box_margin_start_end"
                        android:layout_weight="0.9">
                    </TextView>

                    <ImageView
                        android:id="@+id/x_button"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="25dp"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/text_secondary_dark"
                        android:src="@drawable/ic_close_black_48dp"
                        android:layout_weight="0.1"/>

                </LinearLayout>


                <!--Type of Property-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/property_type_dropdown"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_box_margin_start_end"
                            android:layout_marginEnd="@dimen/text_box_margin_start_end"
                            android:hint="Type of property"
                            app:helperText="*Required"
                            app:helperTextEnabled="true">
                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/property_type_autocomplete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nextFocusDown="@id/property_description"
                                android:focusable="false" />
                        </com.google.android.material.textfield.TextInputLayout>

                    <!-- Description-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/property_description"
                        android:layout_marginTop="10dp"
                        style="@style/TextFieldTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_box_margin_start_end"
                        android:layout_marginEnd="@dimen/text_box_margin_start_end"
                        android:hint="Description"
                        app:helperText="*Required"
                        app:helperTextEnabled="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/property_description_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/property_surface"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Surface & Rooms Layout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <!-- Surface (m²)-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/property_surface"
                            android:layout_marginTop="10dp"
                            style="@style/TextFieldTheme"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_box_margin_start_end"
                            android:layout_marginEnd="10dp"
                            android:hint="Surface (m²)"
                            app:helperText="*Required"
                            app:helperTextEnabled="true"
                            android:layout_weight="0.5">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/property_surface_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:nextFocusDown="@id/property_rooms"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Rooms -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/property_rooms"
                            android:layout_marginTop="10dp"
                            style="@style/TextFieldTheme"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/text_box_margin_start_end"
                            android:hint="N° of Rooms"
                            app:helperText="*Required"
                            app:helperTextEnabled="true"
                            android:layout_weight="0.5">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/property_rooms_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:nextFocusDown="@id/property_bedrooms"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Bedrooms & Bathrooms Layout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                    <!-- Bedrooms -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/property_bedrooms"
                        android:layout_marginTop="10dp"
                        style="@style/TextFieldTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_box_margin_start_end"
                        android:layout_marginEnd="10dp"
                        android:hint="N° of Bedrooms"
                        app:helperTextEnabled="true"
                        android:layout_weight="0.5">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/property_bedrooms_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/property_bathrooms"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Bathrooms -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/property_bathrooms"
                        android:layout_marginTop="10dp"
                        style="@style/TextFieldTheme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_box_margin_start_end"
                        android:hint="N° of Bathrooms"
                        app:helperTextEnabled="true"
                        android:layout_weight="0.5">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/property_bathrooms_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/property_description"
                            android:inputType="number"
                            android:focusable="false"
                            android:clickable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!-- Address-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/property_address"
                        android:layout_marginTop="15dp"
                        style="@style/TextFieldTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_box_margin_start_end"
                        android:layout_marginEnd="@dimen/text_box_margin_start_end"
                        android:hint="Address"
                        app:helperText="*Required"
                        app:helperTextEnabled="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/property_address_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/property_description"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Price-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/property_price"
                        android:layout_marginTop="15dp"
                        style="@style/TextFieldTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_box_margin_start_end"
                        android:layout_marginEnd="@dimen/text_box_margin_start_end"
                        android:hint="Price"
                        app:helperText="*Required"
                        app:helperTextEnabled="true">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/property_price_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/property_description"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Agent in charge-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/property_agent"
                        android:layout_marginTop="15dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_box_margin_start_end"
                        android:layout_marginEnd="@dimen/text_box_margin_start_end"
                        android:hint="Agent in Charge"
                        app:helperText="*Required"
                        app:helperTextEnabled="true">
                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/property_agent_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <!-- Poi layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        layout="@layout/poi_chips_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="@dimen/text_box_margin_start_end"
                        android:layout_marginEnd="@dimen/text_box_margin_start_end"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>

                <!-- Add photos layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        layout="@layout/add_photos_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="@dimen/text_box_margin_start_end"
                        android:layout_marginEnd="@dimen/text_box_margin_start_end"
                        android:layout_marginBottom="15dp" />
                </LinearLayout>

                <!-- Action Button-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <Button
                        android:id="@+id/property_action_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Button"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@color/background_gray"
                        android:elevation="8dp"/>

                </RelativeLayout>

            </LinearLayout>

    </LinearLayout>

</merge>