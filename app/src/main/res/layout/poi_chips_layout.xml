<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/bottom_sheet_add_property">

<com.google.android.material.card.MaterialCardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/poi_chip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Points of Interest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/poi_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/poi_chip_title">

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_subway_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="Subway" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_gym_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="GYM" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_supermarket_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="Supermarket" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_pool_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="Swimming pool" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_mall_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="Shopping mall" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_library_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="Library" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_bus_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="Public bus stop" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_public_p_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="Public Parking" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/poi_private_p_chip"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/chip_margin_start"
                    android:text="Private Parking" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

</merge>