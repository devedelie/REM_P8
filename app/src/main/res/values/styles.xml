<resources>

    <!-- Base application theme. -->
    <style name="REMTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Home Screen Theme -->
    <style name="REMTheme.Home">
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Detail Screen Theme -->
    <style name="REMTheme.Detail">
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <!--Toolbar theme-->
    <style name="REMTheme.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--Toolbar style (white icons solution)-->
    <style name="REMTheme.ToolbarStyle">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/text_secondary_white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/text_secondary_white</item>
    </style>

</resources>
